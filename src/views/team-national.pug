extends templates/layout

block vars

	- var title = 'Сборные - Национальные';
	- var year = 2012;

block content
	div.team
		div.container
			div.bread-crumbs
				a(href="").bread-crumbs__link.
					Сборные
				span.
					Национальные
		div.container.container_main
			+sidebar(true)
			div.content
				h3.mb1.
					Национальные
				form.team__form
					label
						|Год
						|
						select.js-select.team__select
							option.
								2012
							option.
								2013
							option.
								2014
				table.main-table
					- for (var i = 0; i < 10; i++) {
						tr.main-table__row
							td.main-table__col.team__table-col.
								Мужская сборная России, Олимпиада на 2012 г.
							td.main-table__col.team__table-col
								a(href="").btn.btn_link.btn_link-blue.
									Подробнее
					-}